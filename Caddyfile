{$DOMAIN:localhost} {
  encode gzip

  route /api/* {
    reverse_proxy backend:8000
  }

  route /admin* {
    reverse_proxy backend:8000
  }

  route /media/* {
    header Cache-Control "public, max-age=2592000"
    reverse_proxy backend:8000
  }

  route /static/* {
    header Cache-Control "public, max-age=31536000, immutable"
    reverse_proxy backend:8000
  }

  reverse_proxy frontend:3000
}
