{$DOMAIN:localhost} {
  encode gzip

  route /api/* {
    reverse_proxy backend:8000
  }

  route /admin* {
    @adminNoSlash path /admin
    redir @adminNoSlash /admin/ 308
    reverse_proxy backend:8000
  }

  handle_path /media/* {
    header Cache-Control "public, max-age=2592000"
    root * /srv/media
    file_server
  }

  route /static/* {
    header Cache-Control "public, max-age=31536000, immutable"
    reverse_proxy backend:8000
  }

  reverse_proxy frontend:3000
}
